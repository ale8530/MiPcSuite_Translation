					<Label name="video_client_title_owner_count" text="0" font="12" textcolor="#656565" textfocuscolor="#FB5A45" texthotcolor="#191919" textpushedcolor="#FB5A45" align="left, venter"
						left="53" autosize="true" height="35" backgroundtransparent="true" focuspriority="true"/>
				</DecorateButton>
				<PlaceHolder width="20" />
				<DecorateButton name="video_client_title_other" optiongroup="video_client_title_group" width="110" height="35" backgroundtransparent="true">
					<Label text="其它" font="12" textcolor="#656565" textfocuscolor="#FB5A45" texthotcolor="#191919" textpushedcolor="#FB5A45"  align="left,venter"
						backgroundtransparent="true" width="50" height="35" left="0" focuspriority="true"/>
