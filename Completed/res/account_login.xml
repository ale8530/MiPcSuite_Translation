<?xml version="1.0" encoding="utf-8"?>
<window name="login_window" size="500,350" type="window" borderwindow="dialog_border_skin.xml" align="center, vcenter" >
  <Layout left="0" backgroundimage="bro/bro_frame.png;;1,34,1,1" right="0" bottom="0" align="center, vcenter">
    <Title left="0" right="0" top="0" height="30" padding="10,10,10,0" align="near">
      <Label name="login_window_title" text="Mi Account" font="12" textcolor="#656565" align="left, top" />
      <Button name="login_window_close" backgroundtransparent="true" backgroundimage="common/dialog_close.png" backgroundhotimage="common/dialog_close_hot.png" backgroundpushedimage="common/dialog_close_hot.png" width="14" height="14" padding="0,2,0,0"/>
    </Title>
    <HorizontalLayout name="login_view" left="0" right="0" top="0" bottom="0" >
      <!--SPACE | MIUI-LOGO | SPACE | OTHER-->
      <PlaceHolder width="29"/>
      <VerticalLayout width="159">
        <PlaceHolder height="60"/>
        <Control height="227" backgroundimage="img/login.png" backgroundtransparent="true"/>
        <PlaceHolder />
      </VerticalLayout>
      <PlaceHolder width="19"/>
      <VerticalLayout name="account_login_layout" visible="true" width="300">
        <PlaceHolder height="60"/>
        <VerticalLayout name="error_msg_layout" height="40" visible="true" >
          <PlaceHolder/>
          <Label name="error_msg_label" font="12" height="30"  backgroundtransparent="true" text="" textcolor="#ff4a41" align="near,venter" />
        </VerticalLayout>
        <HorizontalLayout>
          <VerticalLayout width="262">
            <VerticalLayout height="82" backgroundimage="img/two_lines_edit_bg.png" backgroundtransparent="true">
              <PlaceHolder height="5"/>
              <RichEdit name="account_id_input" text="" font="14" height="31" backgroundtransparent="true" placestring="Email/mobile number/ID" placetextcolor="#888888"
                        multiline="false" textlimit="40" wanttab="false" wantreturn="false" autohscroll="false" align="venter"/>
              <PlaceHolder height="10"/>
              <RichEdit name="account_pwd_input" text="" font="14" height="31" backgroundtransparent="true" placestring="Password" placetextcolor="#888888" password="true"
                        multiline="false" textlimit="40" wanttab="false" wantreturn="false" autohscroll="false"/>
              <PlaceHolder height="5"/>
            </VerticalLayout>

            <VerticalLayout name="account_dynamic_code_layout" height="35" visible="false" >
              <PlaceHolder height="5"/>
              <RichEdit name="account_dynamic_code_input_box" font="14" height="30"  backgroundtransparent="true" placestring="Please enter the 6-digit dynamic password generated by the mi security token" placetextcolor="#8d8d8d"
                        backgroundimage="img/single_line_edit_bg.png" align="near,venter" text=""
                        multiline="false" textlimit="6" wanttab="false" wantreturn="false" autohscroll="false" />
            </VerticalLayout>

            <VerticalLayout name="account_verify_code_layout" height="47" visible="false" >
              <PlaceHolder height="5"/>
              <HorizontalLayout height="42">
                <VerticalLayout width="162" backgroundimage="img/single_line_edit_bg.png" backgroundtransparent="true">
                  <PlaceHolder height="5"/>
                  <RichEdit name="account_verify_code_input" height="32" font="14"  backgroundtransparent="true" placestring="Please enter verification code" placetextcolor="#888888"
                          align="near,venter" text="" multiline="false" textlimit="40" wanttab="false" wantreturn="false" autohscroll="false" />
                  <PlaceHolder height="5"/>
                </VerticalLayout>

                <PlaceHolder width="10"/>
                <Button name="account_verify_code_picture" backgroundtransparent="true" />
              </HorizontalLayout>
            </VerticalLayout>

            <PlaceHolder height="15"/>
            <Layout height="42">
              <Button name="login_btn" left="0" right="0" top="0" bottom="0" font="14" text="Login" textcolor="#ffffff" imagelist="img/btn/green_btn_list.png" imagelistuistatus="disable" backgroundtransparent="true"/>
            </Layout>
            <PlaceHolder height="10"/>
            <CheckBox name="login_remember" text="Remember my login" width="262" font="14" textcolor="#999999" align="left,venter" defaultnodename="common_controls:checkbox_style"/>
            <PlaceHolder height="10"/>
            <HorizontalLayout height="20">
              <PlaceHolder/>
              <Button name="reg_account_btn" text="Sign up now" width="70" font="14" textcolor="#999999" align="left,venter" autosize="true" backgroundtransparent="true"/>
              <PlaceHolder width="5"/>
              <Control width="1" backgroundimage="main/I.png" height="15" backgroundtransparent="true" align="center,venter"/>
              <PlaceHolder width="5"/>
              <Button name="forget_pwd_btn" text="Forget password" width="70" font="14" textcolor="#999999" align="left,venter" autosize="true" backgroundtransparent="true"/>
            </HorizontalLayout>
          </VerticalLayout>
          <PlaceHolder/>
        </HorizontalLayout>
      </VerticalLayout>
      <VerticalLayout name="account_service_layout" visible="false" width="300">
        <PlaceHolder height="40"/>
        <HorizontalLayout name="skin_account_info" height="30">
          <PlaceHolder/>
          <Label name="user_id" text="" font="14" textcolor="#888888" width="70" autosize="true" align="venter" backgroundtransparent="true" />
          <PlaceHolder width="5"/>
          <Control width="1" backgroundimage="img/sep.png" height="15" backgroundtransparent="true" align="venter"/>
          <PlaceHolder width="5"/>
          <Button name="logout_btn" text="Log out" width="43" font="underline_14" textcolor="#888888" align="venter" autosize="true" backgroundtransparent="true"/>
          <PlaceHolder width="20"/>
        </HorizontalLayout>
        <PlaceHolder height="80"/>
        <Label font="20" height="50" width="100" text="Mi Account has been logged" backgroundtransparent="true" align="center,venter" autosize="true"/>
        <PlaceHolder height="70"/>
        <Button name="close_btn" width="160" height ="40" font="14" text="Close" imagelist="img/btn/common_btn_list.png" imagelistuistatus="disable" backgroundtransparent="true" align="center,venter"/>
        <PlaceHolder/>
      </VerticalLayout>
    </HorizontalLayout>
  </Layout>
</window>
